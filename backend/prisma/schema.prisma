// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model VotingDeck {
    id        Int      @id @default(autoincrement())
    users     User[]
    cards     Card[]
    status    String
    votes     Vote[]
    title     String
    type      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model User {
    id                     Int             @id @default(autoincrement())
    firstName              String
    lastName               String
    email                  String
    passwordHash           String
    friends                User[]          @relation("Friends")
    friendsOf              User[]          @relation("Friends")
    createdAt              DateTime        @default(now())
    updatedAt              DateTime        @updatedAt
    votingDeck             VotingDeck[]
    votes                  Vote[]
    sentFriendRequests     FriendRequest[] @relation("Sender")
    receivedFriendRequests FriendRequest[] @relation("Receiver")
}

model Card {
    id        Int        @id @default(autoincrement())
    title     String
    content   String
    photoURL  String?
    link      String?
    deck      VotingDeck @relation(fields: [id], references: [id])
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    votes     Vote[]
}

model Vote {
    id        Int        @id @default(autoincrement())
    deck      VotingDeck @relation(fields: [id], references: [id])
    user      User       @relation(fields: [id], references: [id])
    card      Card       @relation(fields: [id], references: [id])
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
}

model FriendRequest {
    id        Int      @id @default(autoincrement())
    status    String
    sender    User     @relation("Sender", fields: [id], references: [id])
    receiver  User     @relation("Receiver", fields: [id], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
